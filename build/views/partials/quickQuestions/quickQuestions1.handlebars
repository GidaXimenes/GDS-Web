<div class='mb-4'>
  <!-- Qual o formato da aplicação? -->
  <div class='mb-3'>
    <label class='form-label fw-bold'>
      Qual o formato da aplicação?
    </label>

    <!-- Radio 1 -->
    <div class='form-check'>
      <input
        class='form-check-input'
        type='radio'
        id='presencial'
        name='formatoAplicacao'
        value='Presencial'
      />
      <label class='form-check-label' for='presencial'>Presencial</label>
    </div>

    <!-- Radio 2 -->
    <div class='form-check'>
      <input
        class='form-check-input'
        type='radio'
        id='online'
        name='formatoAplicacao'
        value='Online'
      />
      <label class='form-check-label' for='online'>Online</label>
    </div>

    <!-- Radio 3 -->
    <div class='form-check'>
      <input
        class='form-check-input'
        type='radio'
        id='hibrido'
        name='formatoAplicacao'
        value='Híbrido (presencial e online)'
      />
      <label class='form-check-label' for='hibrido'>Híbrido (presencial e
        online)</label>
    </div>
  </div>

  <!-- Descreva o tema ou assunto -->
  <div class='mb-3'>
    <label class='form-label fw-bold'>Em poucas palavras, descreva o tema ou
      assunto que você deseja gamificar.</label>
    <textarea
      name='temaGamificacao'
      rows='3'
      required
      class='form-control'
    ></textarea>
  </div>

  <!-- De que forma os participantes interagirão? -->
  <div class='mb-3'>
    <label class='form-label fw-bold'>De que forma os participantes interagirão
      na gamificação?</label>

    <div class='form-check'>
      <input
        class='form-check-input'
        type='radio'
        id='individual'
        name='interacao'
        value='Individualmente'
      />
      <label class='form-check-label' for='individual'>Individualmente</label>
    </div>

    <div class='form-check'>
      <input
        class='form-check-input'
        type='radio'
        id='grupos'
        name='interacao'
        value='Em grupos ou equipes'
      />
      <label class='form-check-label' for='grupos'>Em grupos ou equipes</label>
    </div>

    <div class='form-check'>
      <input
        class='form-check-input'
        type='radio'
        id='misto'
        name='interacao'
        value='Mistura de individual e coletivo'
      />
      <label class='form-check-label' for='misto'>Mistura de individual e
        coletivo</label>
    </div>
  </div>

  <!-- Qual será o principal tipo de interação? -->
  <div class='mb-3'>
    <label class='form-label fw-bold'>Qual será o principal tipo de interação
      entre os participantes?</label>

    <div class='form-check'>
      <input
        class='form-check-input'
        type='radio'
        id='competicao'
        name='tipoInteracao'
        value='Competição'
      />
      <label class='form-check-label' for='competicao'>Competição</label>
    </div>

    <div class='form-check'>
      <input
        class='form-check-input'
        type='radio'
        id='cooperacao'
        name='tipoInteracao'
        value='Cooperação'
      />
      <label class='form-check-label' for='cooperacao'>Cooperação</label>
    </div>

    <div class='form-check'>
      <input
        class='form-check-input'
        type='radio'
        id='ambas'
        name='tipoInteracao'
        value='Ambas (competição e cooperação)'
      />
      <label class='form-check-label' for='ambas'>Ambas (competição e
        cooperação)</label>
    </div>
  </div>
</div>